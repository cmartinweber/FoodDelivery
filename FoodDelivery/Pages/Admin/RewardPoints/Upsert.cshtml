@page
@model FoodDelivery.Pages.Admin.RewardPoints.UpsertModel
@{
    ViewData["Title"] = "Manage Reward Points";
}

<div class="border backgroundWhite container p-3">
    <form method="post">
        <input type="hidden" asp-for="RewardPointsObj.Id" />

        <div class="row">
            <div class="col-12">
                <h2 class="text-primary">@(Model.RewardPointsObj.Id == 0 ? "Create" : "Edit") Reward Rule</h2>
                <hr />
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label asp-for="RewardPointsObj.ThresholdPoints"></label>
                    <input asp-for="RewardPointsObj.ThresholdPoints" class="form-control" type="number" />
                    <span asp-validation-for="RewardPointsObj.ThresholdPoints" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RewardPointsObj.Description"></label>
                    <input asp-for="RewardPointsObj.Description" class="form-control" />
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label asp-for="RewardPointsObj.PromoCodeId"></label>
                    <select asp-for="RewardPointsObj.PromoCodeId" class="form-control" asp-items="Model.PromoCodeOptions">
                        <option value="">-- None --</option>
                    </select>
                </div>

                <div class="form-check mt-3">
                    <input asp-for="RewardPointsObj.IsActive" class="form-check-input" />
                    <label asp-for="RewardPointsObj.IsActive" class="form-check-label"></label>
                </div>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
