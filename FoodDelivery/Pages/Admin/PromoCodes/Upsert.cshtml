@page
@model FoodDelivery.Pages.Admin.PromoCodes.UpsertModel
@{
    ViewData["Title"] = "Manage Promo Code";
}

<div class="border backgroundWhite container p-3">
    <form method="post">
        <div class="row">
            <div class="col-12">
                <h2 class="text-primary">@(Model.PromoCodeObj.Id == 0 ? "Create" : "Edit") Promo Code</h2>
                <hr />
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label asp-for="PromoCodeObj.Code"></label>
                    <input asp-for="PromoCodeObj.Code" class="form-control" />
                    <span asp-validation-for="PromoCodeObj.Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.Description"></label>
                    <input asp-for="PromoCodeObj.Description" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.DiscountType"></label>
                    <select asp-for="PromoCodeObj.DiscountType" class="form-control"
                            asp-items="Html.GetEnumSelectList<ApplicationCore.Models.DiscountType>()"></select>
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.DiscountValue"></label>
                    <input asp-for="PromoCodeObj.DiscountValue" class="form-control" />
                    <span asp-validation-for="PromoCodeObj.DiscountValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.MinimumOrderValue"></label>
                    <input asp-for="PromoCodeObj.MinimumOrderValue" class="form-control" />
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label asp-for="PromoCodeObj.ValidFrom"></label>
                    <input asp-for="PromoCodeObj.ValidFrom" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.ValidTo"></label>
                    <input asp-for="PromoCodeObj.ValidTo" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="PromoCodeObj.UsesRemaining"></label>
                    <input asp-for="PromoCodeObj.UsesRemaining" class="form-control" />
                </div>

                <div class="form-check mt-3">
                    <input asp-for="PromoCodeObj.IsActive" class="form-check-input" />
                    <label asp-for="PromoCodeObj.IsActive" class="form-check-label"></label>
                </div>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
